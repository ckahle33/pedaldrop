= form_for @user, url: {action: "create"} do |p|
  .form-group
    = p.label :username
    = p.text_field :username, required: true, class: "form-control"
  .form-group
    = p.label :email
    = p.text_field :email, required: true, class: "form-control"
  .form-group
    = p.label :password
    = p.password_field :password, required: true, class: "form-control"
  .form-group
    = p.label :password_confirmation
    = p.password_field :password_confirmation, required: true, class: "form-control"
  .form-group
    = p.label "Seller?"
    = p.check_box :seller, class: "form-control"
  .form-group
    = p.submit "Sign Up", class: "btn btn-primary"
